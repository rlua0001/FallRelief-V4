@model RiskAssessment.Models.SessionModel

<div class="jumbotron">
    <h2>Create assessment</h2>
</div>

<br />
<br />
@using (Html.BeginForm("Instruction", "Home", FormMethod.Post))
{

    <div class="container">


        <div class="row form-horizontal">
            @*Create drop down to select the asessment type*@
            <div class="form-group">
                <div class="col-md-3">@Html.Label("Select Assessment")</div>
                <div class="col_md-5">
                    @Html.DropDownListFor(x => x.AssessmentTypeID, new SelectList(ViewBag.Assessment, "AssessmentTypeID", "AssessmentType", Model.AssessmentTypeID))
                </div>
            </div>

            @*Start Assessment Button*@
            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-5">
                    <button type="Submit" class="btn btn-primary">Health Assessment</button>
                </div>
            </div>

        </div>
    </div>


}